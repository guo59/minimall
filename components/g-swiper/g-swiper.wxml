<!--components/g-swiper/g-swiper.wxml-->
<swiper indicator-dots
        indicator-active-color="#ff5777"
        autoplay
        interval="3000"
        circular>
  <block wx:for="{{list}}" wx:key="index">
    <swiper-item>
      <image src="{{item.image || item}}" mode="widthFix" class="image"/>
    </swiper-item>
  </block>
</swiper>
