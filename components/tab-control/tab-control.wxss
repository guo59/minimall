/* components/tab-control/tab-control.wxss */
.tab-control {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  padding-bottom: 16rpx;
}
.tab-item {
  flex: 1;
  text-align: center;
}
.active {
  color: #ff5777;
}
.active .title {
  padding: 20rpx 16rpx;
  border-bottom: #ff5777 solid 6rpx;
}