/* pages/cart/childCpns/bottom-bar/bottom-bar.wxss */
.bottom-bar {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #eee;
  box-shadow: 0 -2px 2px rgba(100, 100, 100, .2);
  height: 88rpx;
  align-items: center;
  font-size: 32rpx;
  padding-left: 30rpx;
}
.check-box {
  display: flex;
  align-items: center;
  width: 180rpx;
}
.counter {
  flex: 1;
  color: #333;
}
.payment {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  text-align: center;
  background-color: #ff4500;
}
.icon {
  margin-right: 10rpx;
}