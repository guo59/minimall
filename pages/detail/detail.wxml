<!--pages/detail/detail.wxml-->
<scroll-view class="detail" scroll-y>
  <g-swiper list='{{topImages}}' class="d-swiper"/>
  <g-base-info baseInfo='{{baseInfo}}'/>
  <g-shop-info shopInfo='{{shopInfo}}'/>
  <g-detail-info detailInfo='{{detailInfo}}'/>
  <g-param-info paramInfo='{{paramInfo}}'/>
  <g-comment-info commentInfo='{{commentInfo}}'/>
  <g-recommend-info recommends='{{recommends}}'/>
</scroll-view>
<g-bottom-bar class="d-bottom" bind:addcart='onAddCart'/>